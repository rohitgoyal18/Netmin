#!bin/sh

lname="Done"
while true
do
ls |grep "$lname" > /dev/null                                                   
if [$? = 0]
then

echo " #####################################################################"
echo -e "\33[33m Netmin is already installed in your system :)  \33[0m "
echo " #####################################################################"

else

echo " #####################################################################"
echo -e "\33[33 Installing Netmin In Your System :) \33[0m"
echo " #####################################################################"
echo -e "\33[33 Files Are Being Copied... \33[0m"
echo " #####################################################################"

fi
done
